{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    },
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true
  },
  "files": {
    "maxSize": 5242880,
    "includes": [
      "**",
      "!**/demo/*",
      "!**/corpus/*.json",
      "!**/scripts/cookbook-pdf/book",
      "!**/.data",
      "!**/.next",
      "!**/out",
      "!**/plugin_packages",
      "!**/node_modules",
      "!**/python-mcp",
      "!**/dist",
      "!**/build",
      "!**/coverage",
      "!**/pnpm-lock.yaml",
      "!**/storybook-static",
      "!**/prisma-client",
      "!**/public",
      "!**/projects/bika/packages/bika-zapier/lib"
    ]
  }
}
